    <script type="text/javascript">
        function doAdd() {
        }

        function doView() {
            alert("修改...");
        }

        function doDelete() {
            alert("删除...");
        }

        //工具栏
        var toolbar = [];
        // 定义列
        var columns = [[{
            field: 'sid',
            title: '学号',
            width: 200,
            align: 'center'
        }, {
            field: 'sname',
            title: '姓名',
            width: 200,
            align: 'center'
        }, {
            field: 'classname',
            title: '班级',
            width: 200,
            align: 'center'
        }, {
            field: 'sex',
