        $(function () {
            // 先将body隐藏，再显示，不会出现页面刷新效果
            $("body").css({visibility: "visible"});

            // 收派标准数据表格
            $('#grid').datagrid({
                iconCls: 'icon-forward',
                fit: true,
                border: false,
                rownumbers: true,
                striped: true,
                pageList: [30, 50, 100],
                pagination: true,
                toolbar: toolbar,
                url: "${pageContext.request.contextPath}/score/findTeacherCourseStudent.action",
                idField: 'id',
                columns: columns,
                onDblClickRow: doDblClickRow
            });
        });

        function doDblClickRow() {
            alert("双击表格数据...");
        }
